<DOCTYPE html>

<html>

    <head>
        <title>Demo</title>
        <link rel="stylesheet" href="assets/bootstrap/css/bootstrap.min.css"/>

        <style>
            body{
                margin-left: 30px;
                margin-right: 30px;
            }
        </style>
    </head>

    <body>

        <h1>MyToDo</h1>

        <% if (locals.flash && locals.flash.error) { %>
        <div class="alert alert-danger">
            <%= locals.flash.error %>
        </div>
        <% } %>

        <% if (locals.flash && locals.flash.success) { %>
        <div class="alert alert-success">
            <%= locals.flash.success %>
        </div>
        <% } %>

        <form method="post" action="/">
            <div class="form-group">
                <label for="">My Task</label>
                <textarea name="task" class="form-control" id="exampleTextarea" rows="3"></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>

        <% for (task of tasks) { %>
        <div class="content">
            <div class="text-muted">
                <div class="date"> 
                    <%= task.date.fromNow() %>
                </div>
            </div>
            <div class="task">
                <a href="/delete/<%= task.id %>">âœ˜</a><%= task.task %>
            </div>
        </div>
        <% } %>
       

    </body>

